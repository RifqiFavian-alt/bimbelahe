generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String   
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")

}

model Student {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  phone     String
  birthday  String
  address   String
  payments  Payment[]
  programs  Program[]  @relation("StudentPrograms")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  @@map("students")

}

model Payment {
  id        String   @id @default(cuid())
  student   Student? @relation(fields: [studentId], references: [id], onDelete: SetNull)
  studentId String?
  month     Int
  year      Int
  isPaid    Boolean  @default(false)
  paidAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, month, year]) 
  @@map("payments")
}

model Questionnaire {
  id          String   @id @default(uuid()) 
  name        String   
  email       String   
  questions   String[]   
  review      String?  
  isFeatured  Boolean  @default(false) 
  createdAt   DateTime @default(now())

  @@map("questionnaires")
}

model Program {
  id        String     @id @default(cuid())
  name      String     @unique
  students  Student[]  @relation("StudentPrograms")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("programs")
}

enum Role {
  ADMIN
  USER
}


